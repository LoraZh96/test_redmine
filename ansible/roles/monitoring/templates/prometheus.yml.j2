global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'node_exporter'
    static_configs:
      - targets:
          - '{{ hostvars['bastion'].private_ip }}:9100'
          - '{{ hostvars['proxy'].private_ip }}:9100'
          - '{{ hostvars['manager'].ansible_host }}:9100'
          - '{{ hostvars['worker1'].ansible_host }}:9100'
          - '{{ hostvars['worker2'].ansible_host }}:9100'
          - '{{ hostvars['monitoring'].ansible_host }}:9100'
          - '{{ hostvars['fck_nat'].private_ip }}:9100'

  - job_name: 'cloudwatch_exporter'
    static_configs:
      - targets:
          - 'cloudwatch-exporter:9106'

alerting:
  alertmanagers:
    - static_configs:
        - targets:
            - "alertmanager:9093"

rule_files:
  - "/etc/prometheus/alert.rules.yml"

