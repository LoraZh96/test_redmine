load_module modules/ngx_http_modsecurity_module.so;

user www-data;
worker_processes auto;
pid /run/nginx.pid;

events {
    worker_connections 1024;
}

http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;
    sendfile        on;
    tcp_nopush      on;
    tcp_nodelay     on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    access_log /var/log/nginx/access.log;
    error_log  /var/log/nginx/error.log warn;

    # --- Sécurité ---
    server_tokens off;
    add_header X-Content-Type-Options nosniff always;
    add_header X-Frame-Options SAMEORIGIN always;
    add_header X-XSS-Protection "1; mode=block" always;

    # --- ModSecurity ---
    modsecurity on;
    modsecurity_rules_file /etc/nginx/modsecurity.conf;

    # --- Reverse Proxy vers Redmine ---
    
    server {
        listen 80;
        server_name ficus-redmine.duckdns.org;

        access_log /var/log/nginx/redmine_access.log;
        error_log  /var/log/nginx/redmine_error.log;

        location /health {
            access_log off;
            return 200 'Redmine OK';
            add_header Content-Type text/plain;
        }

        location / {
            proxy_pass http://{{ hostvars['manager'].ansible_host }}:3000;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_redirect off;
            
            proxy_read_timeout 90;
            proxy_connect_timeout 30;
        }
    }

    # --- Reverse Proxy vers Prometheus ---

    server {
        listen 80;
        server_name ficus-prometheus.duckdns.org;

        access_log /var/log/nginx/prometheus_access.log;
        error_log  /var/log/nginx/prometheus_error.log;

        location / {
            proxy_pass http://{{ hostvars['monitoring'].ansible_host }}:9090;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }

    # --- Reverse Proxy vers Grafana ---

    server {
        listen 80;
        server_name ficus-grafana.duckdns.org;

        access_log /var/log/nginx/grafana_access.log;
        error_log  /var/log/nginx/grafana_error.log;

        location / {
            proxy_pass http://{{ hostvars['monitoring'].ansible_host }}:3000;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            # WebSocket pour Grafana
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
        }
    }

    # # --- Reverse Proxy catch-all ---

    server {
        listen 80 default_server;
        server_name _;

        return 444;
    }
}

