load_module modules/ngx_http_modsecurity_module.so;

user www-data;
worker_processes auto;
pid /run/nginx.pid;

events {
    worker_connections 1024;
}

http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;

    access_log /var/log/nginx/access.log;
    error_log  /var/log/nginx/error.log warn;

    # --- ModSecurity ---
    modsecurity on;
    modsecurity_rules_file /etc/nginx/modsec/main.conf;

    # --------------------------
    #      REDMINE UPSTREAM
    # --------------------------
    upstream redmine_upstream {
        least_conn;
{% for worker in groups['workers'] | default([]) %}
        server {{ hostvars[worker].ansible_host }}:{{ redmine_backend_port }};
{% endfor %}
{% if (groups['workers'] | default([])) | length == 0 %}
        server {{ redmine_backend_host }}:{{ redmine_backend_port }};
{% endif %}
    }

    # -----------------------------------------------------------
    #                REVERSE PROXY - REDMINE (HTTP)
    # -----------------------------------------------------------
    server {
        listen 80;
        server_name _;

        access_log /var/log/nginx/redmine_access.log;
        error_log  /var/log/nginx/redmine_error.log;

        location /health {
            access_log off;
            return 200 'Redmine OK';
            add_header Content-Type text/plain;
        }

        location / {
            proxy_pass http://redmine_upstream;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }
    }

    # -----------------------------------------------------------
    #    PROMETHEUS & GRAFANA FOR TESTS (HTTP ONLY)
    # -----------------------------------------------------------

    server {
        listen 80;
        server_name grafana.local;

        location / {
            proxy_pass http://{{ hostvars['monitoring'].ansible_host }}:3000;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }
    }

    server {
        listen 80;
        server_name prometheus.local;

        location / {
            proxy_pass http://{{ hostvars['monitoring'].ansible_host }}:9090;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }
    }
}
