load_module modules/ngx_http_modsecurity_module.so;

user www-data;
worker_processes auto;
pid /run/nginx.pid;

events {
    worker_connections 1024;
}

http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;
    sendfile        on;
    tcp_nopush      on;
    tcp_nodelay     on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    access_log /var/log/nginx/access.log;
    error_log  /var/log/nginx/error.log warn;

    # --- Sécurité ---
    server_tokens off;
    add_header X-Content-Type-Options nosniff always;
    add_header X-Frame-Options SAMEORIGIN always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # --- ModSecurity ---
    modsecurity on;
    modsecurity_rules_file /etc/nginx/modsecurity.conf;

    # --- Paramètres SSL communs ---
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Certificat wildcard
    ssl_certificate /etc/nginx/ssl/fullchain.pem;
    ssl_certificate_key /etc/nginx/ssl/privkey.pem;

    # --- Reverse Proxy vers Redmine ---
    
    server {
        listen 80;
        server_name redmine.{{ ssl_domain }};
        return 301 https://$server_name$request_uri;
    }

    server {
        listen 443 ssl http2;
        http2 on;
        server_name redmine.{{ ssl_domain }};

        access_log /var/log/nginx/redmine_access.log;
        error_log  /var/log/nginx/redmine_error.log;

        location /health {
            access_log off;
            return 200 'Redmine OK';
            add_header Content-Type text/plain;
        }

        location / {
            proxy_pass http://{{ hostvars['manager'].ansible_host }}:3000;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto https;
            proxy_redirect off;
            
            proxy_read_timeout 90;
            proxy_connect_timeout 30;
        }
    }

    # --- Reverse Proxy vers Prometheus ---

    server {
        listen 80;
        server_name prometheus.{{ ssl_domain }};
        return 301 https://$server_name$request_uri;
    }

    server {
        listen 443 ssl http2;
        http2 on;
        server_name prometheus.{{ ssl_domain }};

        access_log /var/log/nginx/prometheus_access.log;
        error_log  /var/log/nginx/prometheus_error.log;

        location / {
            proxy_pass http://{{ hostvars['monitoring'].ansible_host }}:9090;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto https;
        }
    }

    # --- Reverse Proxy vers Grafana ---

    server {
        listen 80;
        server_name grafana.{{ ssl_domain }};
        return 301 https://$server_name$request_uri;
    }

    server {
        listen 443 ssl http2;
        http2 on;
        server_name grafana.{{ ssl_domain }};

        access_log /var/log/nginx/grafana_access.log;
        error_log  /var/log/nginx/grafana_error.log;

        location / {
            proxy_pass http://{{ hostvars['monitoring'].ansible_host }}:3000;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto https;
            
            # WebSocket pour Grafana
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
        }
    }

    # --- Reverse Proxy catch-all ---

    server {
        listen 80 default_server;
        server_name _;
        return 444;
    }

    server {
        listen 443 ssl default_server;
        http2 on;
        server_name _;
        return 444;
    }
}