load_module modules/ngx_http_modsecurity_module.so;

user www-data;
worker_processes auto;
pid /run/nginx.pid;

events {
    worker_connections 1024;
}

http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;
    sendfile        on;
    tcp_nopush      on;
    tcp_nodelay     on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    access_log /var/log/nginx/access.log;
    error_log  /var/log/nginx/error.log warn;

    # --- Sécurité ---
    server_tokens off;
    add_header X-Content-Type-Options nosniff always;
    add_header X-Frame-Options SAMEORIGIN always;
    add_header X-XSS-Protection "1; mode=block" always;

    # --- ModSecurity ---
    modsecurity on;
    modsecurity_rules_file /etc/nginx/modsec/main.conf;

    # --- SSL ---
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;


    # --------------------------
    #      REDMINE UPSTREAM
    # --------------------------
    upstream redmine_upstream {
        least_conn;
{% for worker in groups['workers'] | default([]) %}
        server {{ hostvars[worker].ansible_host }}:{{ redmine_backend_port }};
{% endfor %}
{% if (groups['workers'] | default([])) | length == 0 %}
        server {{ redmine_backend_host }}:{{ redmine_backend_port }};
{% endif %}
    }

    # -----------------------------------------------------------
    #                REVERSE PROXY - REDMINE
    # -----------------------------------------------------------
    server {
        listen 80;
        server_name _;
        return 301 https://$host$request_uri;
    }

    server {
        listen 443 ssl http2;
        server_name _;

        ssl_certificate /etc/nginx/ssl/fullchain.pem;
        ssl_certificate_key /etc/nginx/ssl/privkey.pem;

        access_log /var/log/nginx/redmine_access.log;
        error_log  /var/log/nginx/redmine_error.log;

        location /health {
            access_log off;
            return 200 'Redmine OK';
            add_header Content-Type text/plain;
        }

        location / {
            proxy_pass http://redmine_upstream;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto https;

            proxy_read_timeout 90;
            proxy_connect_timeout 30;
        }
    }

    # -----------------------------------------------------------
    #            PROMETHEUS & GRAFANA (LOCAL HTTPS)
    # -----------------------------------------------------------

    server {
        listen 443 ssl;
        server_name grafana.local;

        ssl_certificate /etc/nginx/ssl/fullchain.pem;
        ssl_certificate_key /etc/nginx/ssl/privkey.pem;

        location / {
            proxy_pass http://{{ hostvars['monitoring'].ansible_host }}:3000;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }
    }

    server {
        listen 443 ssl;
        server_name prometheus.local;

        ssl_certificate /etc/nginx/ssl/fullchain.pem;
        ssl_certificate_key /etc/nginx/ssl/privkey.pem;

        location / {
            proxy_pass http://{{ hostvars['monitoring'].ansible_host }}:9090;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }
    }
}
